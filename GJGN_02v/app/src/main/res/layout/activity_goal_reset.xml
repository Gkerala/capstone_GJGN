<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 재설정"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp" />

        <!-- 현재 목표 정보 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_bg">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 목표 정보를 불러오는 중..."
                android:textSize="16sp"
                android:padding="16dp"
                android:gravity="center" />
        </com.google.android.material.card.MaterialCardView>

        <!-- 목표 유형 선택 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoalType"
            style="@style/Widget.Material3.Button.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목표 유형 선택"
            app:icon="@drawable/ic_arrow_drop_down"
            app:iconGravity="start"
            android:layout_marginBottom="16dp"/>

        <!-- 목표 체중 선택 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTargetWeight"
            style="@style/Widget.Material3.Button.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목표 체중 설정"
            app:icon="@drawable/ic_edit"
            app:iconGravity="start"
            android:layout_marginBottom="28dp" />

        <!-- Divider -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="28dp" />

        <!-- 저장하기 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveGoal"
            style="@style/Widget.Material3.Button.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textStyle="bold"
            android:layout_marginBottom="14dp" />

        <!-- 취소 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelGoal"
            style="@style/Widget.Material3.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소" />

    </LinearLayout>

</ScrollView>
